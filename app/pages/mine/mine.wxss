::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.userinfo {
  height: 226rpx;
  background: linear-gradient(45deg, rgba(237, 214, 168, 1) 0%, rgba(231, 205, 152, 1) 100%);
  /* padding: 10rpx 38rpx; */
  display: flex;
  align-items: center;
  position: relative;
}

.userinfo-avatar {
  display: inline-block;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);

}


.userinfo-name {
  position: absolute;
  top: -60rpx;
  left: 100rpx;
}

.yes {
  position: relative;
}

.yes::after {
  content: '已验证';
  position: absolute;
  left: 80rpx;
  top: 40rpx;
  width: 100rpx;
  height: 50rpx;
  border-radius: 20rpx;
  border: 1px solid #cc0001;
  font-size: 14px;
  text-align: center;
  line-height: 50rpx;
}

.no {
  position: relative;
}

.no::after {
  content: '未验证';
  position: absolute;
  left: 80rpx;
  top: 40rpx;
  width: 100rpx;
  height: 50rpx;
  border-radius: 20rpx;
  border: 1px solid #cc0001;
  font-size: 14px;
  text-align: center;
  line-height: 50rpx;
}

.vip {
  position: absolute;
  top: 130rpx;
  left: 250rpx;
}

.score {
  position: absolute;
  top: 130rpx;
  left: 350rpx;
}

.tag {
  /* padding: 5rpx 10rpx; */
  border-radius: 10%;
  border: 1px solid #FFA41F;
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(246, 229, 193, 1);
  line-height: 33rpx;
  background-color: #FFA41F;
}




.m-item {
  background: #fff;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  height: 42rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(86, 86, 86, 1);
  opacity: 1;
  /* padding: 4%; */
  border-bottom: 1px solid #eee;
  display: flex;

}

.icon {
  width: 5%;
  height: 40rpx;
  vertical-align: middle;

}

.main {
  width: 80%;
