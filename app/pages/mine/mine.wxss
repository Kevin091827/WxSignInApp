}










/* 登陆 */
.header {
  display: flex;

  padding: 30rpx 50rpx 30rpx 40rpx;
  background: #fff;
}

.header-tx {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
  border: 1px solid #cc0001;
}

.unLogin-tx {
  background: #fff;
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx
}

.userNickName {
  font-size: 43rpx;
  color: #fff;
}

.header-right {
  width: 60%;
  color: #fff;
}

.login-name {
  height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.login-setPhone {
  color: #fff;
  font-size: 26rpx;
  background: rgba(0, 0, 0, 0.253);
  border-radius: 30rpx;
  /* padding: 10rpx 20rpx; */
  margin-top: 5rpx;
}

i-icon {
  font-size: 50rpx;
  color: rgb(256, 138, 56);
}

.info-login {
  width: 192rpx;
  height: 62rpx;
  margin-left: 30rpx;
  color: #fff;
  background-color: #FFA41F;
  font-size: 16px;
  line-height: 62rpx;
  border: none;
  border-radius: 50rpx;
}

