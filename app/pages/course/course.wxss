page {
    height: 100%;
}
.course {
    display: flex;
    flex-direction: column;
    height: 100%;
}
.search-type {
  font-size: 16px;
  color: #888;
  text-align: center;
}
.search-type .type-title {
  color: #000;
}
canvas {
    width: 100%;
    flex: 1;
}
.mo-btn {
    border-radius: 0;
    width: 100%;
    height: 80rpx;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(90deg, #f06292, #ed5a65);
    color: #fff;
    font-size: 28rpx;
}
.op {
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    background: #f06292;

}
.op .item {
text-align: center;
flex: 1;
}

.header {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 40rpx;
    font-size: 14px;
}

.search-box,
.add-course {
    height: 60rpx;
    padding: 0 20rpx;
    font-size: 14px;
    line-height: 60rpx;
    border: 1px solid #f0f0f0;
    color: #888;
}

.msg-item {
    display: flex;
    height: 60rpx;
    justify-content: space-around;
    margin-bottom: 30rpx;
}

.msg-item .msg-title {
    height: 100%;
    line-height: 60rpx;
}

.msg-item .msg-input {
    width: 165px;
    border: 1px solid #e0e0e0;
}

/* 课程表 */
.flex-item {
    width: 95rpx;
    height: 100px;
  }
  
  .kcb-item {
    position: absolute;
    justify-content: center;
    display: flex;
    align-items: center;
    border-radius: 5px;
  }
  
  .smalltext {
    font-size: 8pt;
    color: #fff;
    padding-left: 2px;
  }
  
  .top {
    display: flex;
    flex-direction: row;
    margin-left: 35rpx;
    background-color: #d2e6b3;
    color: #7cba23;
  }
  
  .top-text {
    width: 100rpx;
    height: 35rpx;
    font-size: 9pt;
    justify-content: center;
    display: flex;
    align-items: center;
  }
  
  .scroll {
    height: 1170rpx;
    z-index: 101;
  }
  
  .left {
    width: 35rpx;
    height: 100rpx;
    font-size: 9pt;
    justify-content: center;
    display: flex;
    align-items: center;
  }

  .btn-group {
    display: flex;
    justify-content: space-around;
  }

  .btn-group .i-btn-circle {
    width: 240rpx !important; 
  }